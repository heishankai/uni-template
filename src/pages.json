{
	// uni - ui 组件自动按需导入
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "榕树洞",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/copywriter/index",
			"style": {
				"navigationBarTitleText": "撰稿人",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/taletelling/index",
			"style": {
				"navigationBarTitleText": "讲故事"
			}
		},
		{
			"path": "pages/message/index",
			"style": {
				"navigationBarTitleText": "消息"
			}
		},
		{
			"path": "pages/mine/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"custom": true,
		"color": "#C8BFBF",
		"selectedColor": "#151515",
		"borderStyle": "white",
		"backgroundColor": "#FFFFFF",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar/index.png",
				"selectedIconPath": "static/tabbar/index_on.png",
				"text": "榕树洞"
			},
			{
				"pagePath": "pages/copywriter/index",
				"iconPath": "static/tabbar/copywriter.png",
				"selectedIconPath": "static/tabbar/copywriter_on.png",
				"text": "撰稿人"
			},
			{
				"pagePath": "pages/taletelling/index",
				"iconPath": "static/tabbar/taletelling.png",
				"selectedIconPath": "static/tabbar/taletelling_on.png",
				"text": "讲故事"
			},
			{
				"pagePath": "pages/message/index",
				"iconPath": "static/tabbar/message.png",
				"selectedIconPath": "static/tabbar/message_on.png",
				"text": "消息"
			},
			{
				"pagePath": "pages/mine/index",
				"iconPath": "static/tabbar/mine.png",
				"selectedIconPath": "static/tabbar/mine_on.png",
				"text": "我的"
			}
		]
	},
	// 分包加载规则
	"subPackages": [
		{
			// 子包的根目录
			"root": "copywriter-subpackage",
			// 页面路径和窗口表现
			"pages": [
				{
					"path": "copywriter-info/index",
					"style": {
						"navigationBarTitleText": "撰稿人信息"
					}
				},
				{
					"path": "search-writer/index",
					"style": {
						"navigationBarTitleText": "搜索撰稿人",
						"navigationStyle": "custom"
					}
				},
				{
					"path": "dialogue/index",
					"style": {
						"navigationBarTitleText": "对话"
					}
				},
				{
					"path": "dialogue-detail/index",
					"style": {
						"navigationBarTitleText": "个人资料"
					}
				},
				{
					"path": "search-user/index",
					"style": {
						"navigationBarTitleText": "搜索用户",
						"navigationStyle": "custom"
					}
				}
			]
		},
		{
			// 子包的根目录
			"root": "mine-subpackage",
			// 页面路径和窗口表现
			"pages": [
				{
					"path": "apply-copywriter/index",
					"style": {
						"navigationBarTitleText": "成为撰稿人"
					}
				},
				{
					"path": "personal-data/index",
					"style": {
						"navigationBarTitleText": "个人信息"
					}
				},
				{
					"path": "collect-list/index",
					"style": {
						"navigationBarTitleText": "收藏",
						"navigationStyle": "custom"
					}
				},
				{
					"path": "praise-list/index",
					"style": {
						"navigationBarTitleText": "点赞",
						"navigationStyle": "custom"
					}
				},
				{
					"path": "order-list/index",
					"style": {
						"navigationBarTitleText": "订单",
						"navigationStyle": "custom"
					}
				},
				{
					"path": "login/index",
					"style": {
						"navigationBarTitleText": "登录/注册",
					}
				}
			]
		}
	],
	// 分包预下载规则
	"preloadRule": {
		"pages/copywriter/index": {
			"network": "all",
			"packages": [
				"copywriter-subpackage"
			]
		},
		"pages/mine/index": {
			"network": "all",
			"packages": [
				"mine-subpackage"
			]
		}
	}
}